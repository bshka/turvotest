<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TickerListItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TickerPriceListItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="TickerDetails">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TickerPriceDetails">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="TickerDetailsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PortfolioErrorText">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
